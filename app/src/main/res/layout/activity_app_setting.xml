<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppSettingActivity">

    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_tool_bar_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/disable_bio_loginTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/ColorBackground"
        android:drawableEnd="@drawable/group_37665"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="9sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="Disable Biometric Login"
        android:textColor="@color/Color_app_textview"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_toolbar" />

    <TextView
        android:id="@+id/notificationsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/ColorBackground"
        android:drawableEnd="@drawable/icon_feather_chevron_down"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="9sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="Notifications"
        android:textColor="@color/Color_app_textview"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disable_bio_loginTv" />

    <TextView
        android:id="@+id/distanceUnitTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/ColorBackground"
        android:drawableEnd="@drawable/icon_feather_chevron_down"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="9sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="Distance Unit"
        android:textColor="@color/Color_app_textview"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notificationsTv" />

    <TextView
        android:id="@+id/currencyTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/ColorBackground"
        android:drawableEnd="@drawable/icon_feather_chevron_down"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="9sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="Currency"
        android:textColor="@color/Color_app_textview"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distanceUnitTv" />

    <TextView
        android:id="@+id/logOutTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/ColorBackground"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="9sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="Logout"
        android:textColor="@color/Color_app_textview"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currencyTv" />

</androidx.constraintlayout.widget.ConstraintLayout>