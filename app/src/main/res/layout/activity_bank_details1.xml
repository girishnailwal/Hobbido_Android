<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".BankDetails1Activity">
<!--    android:fillViewport="true"-->
    <!--<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >-->
        <include
            android:id="@+id/include1"
            layout="@layout/custom_tool_bar_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/editCountryRemittance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Country of remittance"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include1" />

        <EditText
            android:id="@+id/editBankName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Bank Name"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/editCountryRemittance"
            app:layout_constraintTop_toBottomOf="@id/editCountryRemittance" />

        <EditText
            android:id="@+id/editBranchAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Beneficiary branch address"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/editBankName"
            app:layout_constraintTop_toBottomOf="@id/editBankName" />

        <EditText
            android:id="@+id/editSwiftCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Swift code"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/editBranchAddress"
            app:layout_constraintTop_toBottomOf="@id/editBranchAddress" />

        <EditText
            android:id="@+id/editRoutingNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Routing Number"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/editSwiftCode"
            app:layout_constraintTop_toBottomOf="@id/editSwiftCode" />

        <EditText
            android:id="@+id/editBeneficiaryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Beneficiary name"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/editRoutingNumber"
            app:layout_constraintTop_toBottomOf="@id/editRoutingNumber" />

        <EditText
            android:id="@+id/editBeneficiaryAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Beneficiary account"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/editBeneficiaryName"
            app:layout_constraintTop_toBottomOf="@id/editBeneficiaryName" />

        <EditText
            android:id="@+id/editBeneficiaryAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="9sp"
            android:hint="Beneficiary address"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/edit_text_hint_color"
            android:textSize="15sp"
            android:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/editBeneficiaryAccount"
            app:layout_constraintTop_toBottomOf="@id/editBeneficiaryAccount" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_rounded_bg"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_semibold"
            android:lineSpacingExtra="9sp"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->


</androidx.constraintlayout.widget.ConstraintLayout>