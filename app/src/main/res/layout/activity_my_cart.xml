            app:layout_constraintTop_toBottomOf="@id/include1" />

        <ImageView
            android:id="@+id/hurtImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
